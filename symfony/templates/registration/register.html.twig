{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="mb-10 text-4xl font-semibold">Register</h1>
    <div>
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
            
            <div class="mt-5 flex gap-4 items-center">
                <button type="submit" class="bg-sky-500 hover:bg-sky-600 text-white font-bold py-2 px-4 rounded">
                    Register
                </button>
                <a href="{{ path('app_login') }}" class="text-sky-500 hover:text-sky-600">Already have an account?</a>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
